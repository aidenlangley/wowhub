{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "preserveValueImports": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    // "noImplicitAny": true,
    "paths": {
      "$lib": [
        "src/lib"
      ],
      "$lib/*": [
        "src/lib/*"
      ],
      "$comp": [
        "src/lib/components"
      ],
      "$comp/*": [
        "src/lib/components/*"
      ],
      "$css": [
        "src/lib/css"
      ],
      "$css/*": [
        "src/lib/css/*"
      ],
      "$models": [
        "src/lib/models"
      ],
      "$models/*": [
        "src/lib/models/*"
      ],
      "$stores": [
        "src/stores"
      ],
      "$stores/*": [
        "src/stores/*"
      ],
      "$img": [
        "src/images"
      ],
      "$img/*": [
        "src/images/*"
      ]
    }
  },
  "include": [
    "../src/**/*.js",
    "../src/**/*.ts",
    "../src/**/*.svelte"
  ],
  "exclude": [
    "../node_modules/**"
  ]
}
